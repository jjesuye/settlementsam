{
  "hosting": {
    "source": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "frameworksBackend": {
      "region": "us-central1",
      "secretEnvironmentVariables": [
        { "key": "FIREBASE_PRIVATE_KEY",  "secret": "FIREBASE_PRIVATE_KEY"  },
        { "key": "FIREBASE_CLIENT_EMAIL", "secret": "FIREBASE_CLIENT_EMAIL" },
        { "key": "GMAIL_APP_PASSWORD",    "secret": "GMAIL_APP_PASSWORD"    },
        { "key": "JWT_SECRET",            "secret": "JWT_SECRET"            },
        { "key": "ADMIN_PASSWORD_HASH",   "secret": "ADMIN_PASSWORD_HASH"   },
        { "key": "STRIPE_SECRET_KEY",     "secret": "STRIPE_SECRET_KEY"     },
        { "key": "STRIPE_WEBHOOK_SECRET", "secret": "STRIPE_WEBHOOK_SECRET" }
      ]
    }
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
